<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       					   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource ="ws.xml"/>
	<import resource ="camel.xml"/>

	<bean id="propertyPlaceholder" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    	<property name="locations">
    		<list>
    			<value>classpath:com/nws/resources/environment.properties</value>
    		</list>
    	</property>
    </bean>
    
	
	<bean id="customerSvc" class="org.apache.servicemix.examples.cxf.jaxrs.service.CustomerService"/>
    <bean id="orderSvc" class="org.apache.servicemix.examples.cxf.jaxrs.service.OrderService">
    	<property name="template" ref="camelTemplate"/>
    </bean>
    <bean id="userMgtSvc" class="org.mmedev.rs.service.myaccount.MyAccountSvcImpl"/>
</beans>
